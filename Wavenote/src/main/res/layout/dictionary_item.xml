<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="2dp"
    android:clipChildren="false"
    android:clipToPadding="false"
    android:orientation="horizontal"
    android:paddingLeft="@dimen/dictionary_horizontal_space"
    android:paddingTop="0dp"
    android:paddingRight="@dimen/dictionary_horizontal_space"
    android:paddingBottom="@dimen/dictionary_vertical_space"
    android:focusableInTouchMode="true"
    android:clickable="true"
    android:focusable="true"
    tools:ignore="MissingConstraints">

    <com.google.android.material.textfield.TextInputLayout
        style="@style/KeywordTextInputLayoutStyle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="start"
        android:layout_marginEnd="@dimen/dictionary_horizontal_space"
        android:layout_weight="1.5"
        android:hint="@string/keyword">

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:maxLength="15" />

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        style="@style/TypeKeywordInputLayoutStyle"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_marginEnd="15dp"
        android:layout_weight="1"
        android:hint="@string/type"
        android:text="@string/type">

        <AutoCompleteTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="0dp"
            tools:ignore="LabelFor" />

    </com.google.android.material.textfield.TextInputLayout>

    <ImageButton
        android:layout_width="40dp"
        android:layout_height="match_parent"
        android:layout_gravity="bottom"
        android:layout_marginTop="5dp"
        android:contentDescription="@string/description_delete_item"
        android:background="@null"
        android:src="@drawable/av_trash_empty_blue_24dp"/>

</LinearLayout>